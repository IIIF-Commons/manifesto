{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": [ "es2017", "dom" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "dist-commonjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ]
}
